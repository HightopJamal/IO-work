using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.IO;

namespace Assignment9_Daniel
{
    class Program
    {
        static void Main(string[] args)
        {
            string line;
            double total, average;
            double Mon, Tue, Thur;

            StreamReader f = new StreamReader("sourceScores.txt");
            StreamWriter report = new StreamWriter("scoresReport.txt");

            Console.WriteLine(f.ReadLine());

            while ((line = f.ReadLine()) != null)
            {
                String[] strings = line.Split();

                total = Math.Round(double.Parse(strings[0]) + double.Parse(strings[1]) + double.Parse(strings[2]));
                average = Math.Round(total / strings.Length);


                Mon = double.Parse(strings[2]);
                Tue = double.Parse(strings[2]);
                Thur = double.Parse(strings[2]);

                average = total / 5;
                Console.WriteLine("{0}\t{1}\t{2}", Mon, Tue, Thur);


            }

            f.Close();
            report.Close();

        }
    }
}
